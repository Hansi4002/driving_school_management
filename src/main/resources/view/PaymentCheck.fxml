<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-border-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolmanagement.controller.PaymentCheckController">
   <children>
      <VBox spacing="20" style="-fx-padding: 30;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Payment Verification" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox spacing="8">
               <children>
                  <Label text="Select Payment to Check:" textFill="#34495e">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cmbPayments" prefHeight="40.0" prefWidth="340.0" promptText="Choose a payment to verify..." style="-fx-background-radius: 8; -fx-font-size: 13px;" />
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="15">
               <children>
                  <Button fx:id="btnCheck" onAction="#checkPayment" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-cursor: hand;" text="Check Payment" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
