<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolmanagement.controller.UserFormController">
   <children>
      <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0">
               <children>
                  <TextField fx:id="txtSearch" onAction="#txtSearchOnAction" prefWidth="400.0" promptText="Search users by name, username, or role..." style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                     <children>
                        <Label text="User Management">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnNewUser" onAction="#btnNewUserOnAction" prefHeight="32.0" prefWidth="120.0" style="-fx-background-radius: 5; -fx-background-color: #2196F3; -fx-cursor: hand;" text="+ New User" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="User ID">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtUserId" editable="false" promptText="Auto-generated" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Full Name *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtName" promptText="Enter full name" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Email Address *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtEmail" promptText="Enter email address" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Phone Number *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtPhoneNo" promptText="Enter phone number" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Username *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtUserName" promptText="Enter username" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Password *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER_LEFT" spacing="5">
                                 <children>
                                    <PasswordField fx:id="txtPassword" promptText="Enter password" style="-fx-background-radius: 5; -fx-pref-height: 35;" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Role *">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbRole" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Account Status">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <CheckBox fx:id="chkActive" selected="true" style="-fx-font-size: 13px;" text="Active Account" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 5; -fx-cursor: hand;" text="Save" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="80.0" style="-fx-background-radius: 5; -fx-background-color: #FF9800; -fx-cursor: hand;" text="Update" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-cursor: hand;" text="Delete" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label text="User List">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRefresh" onAction="#btnRefreshOnAction" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-background-radius: 5; -fx-cursor: hand;" text="Refresh" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="tblUser" prefHeight="200.0" style="&#10;                        -fx-border-radius: 5;&#10;                     ">
                     <columns>
                        <TableColumn fx:id="colUserId" prefWidth="80.0" text="User ID" />
                        <TableColumn fx:id="colName" prefWidth="130.0" text="Full Name" />
                        <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email Address" />
                        <TableColumn fx:id="colPhoneNo" prefWidth="110.0" text="Phone Number" />
                        <TableColumn fx:id="colUserName" prefWidth="100.0" text="Username" />
                        <TableColumn fx:id="colRole" prefWidth="80.0" text="Role" />
                        <TableColumn fx:id="colActive" prefWidth="70.0" text="Status" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
