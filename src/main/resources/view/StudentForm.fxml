<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="780.0" style="-fx-border-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolmanagement.controller.StudentFormController">
   <children>
      <BorderPane prefHeight="700.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox spacing="20" style="-fx-padding: 20;">
               <children>
                  <TextField fx:id="txtSearch" promptText="Search students by name, NIC, email, or phone..." style="-fx-background-radius: 8; -fx-pref-height: 35;">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </TextField>
                  <VBox style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Student Management">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnNewStudent" onAction="#btnNewStudentOnAction" prefHeight="32.0" prefWidth="130.0" style="-fx-background-radius: 8; -fx-background-color: #2196F3; -fx-cursor: hand;" text="+ New Student" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="15">
                           <children>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="Student ID" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtStudentId" editable="false" promptText="Auto-generated" style="-fx-background-radius: 6; -fx-pref-height: 35;" />
                                 </children>
                              </VBox>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="Full Name *" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtName" promptText="Enter full name" style="-fx-background-radius: 6; -fx-pref-height: 35;" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="15">
                           <children>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="NIC Number *" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtNic" promptText="Enter NIC number" style="-fx-background-radius: 6; -fx-pref-height: 35;" />
                                 </children>
                              </VBox>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="Email Address *" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtEmail" promptText="Enter email address" style="-fx-background-radius: 6; -fx-pref-height: 35;" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                        <HBox spacing="15">
                           <children>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="Phone Number *" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtPhoneNo" promptText="Enter phone number" style="-fx-background-radius: 6; -fx-pref-height: 35;" />
                                 </children>
                              </VBox>
                              <VBox prefWidth="200.0" spacing="5">
                                 <children>
                                    <Label text="Enrollment Date" textFill="#2c3e50">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <DatePicker fx:id="dateEnrollment" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 6;" />
                                 </children>
                              </VBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15">
                           <children>
                              <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefHeight="38.0" prefWidth="85.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 8; -fx-cursor: hand;" text="Save" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="38.0" prefWidth="85.0" style="-fx-background-radius: 8; -fx-background-color: #FF9800; -fx-cursor: hand;" text="Update" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefHeight="38.0" prefWidth="85.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 8; -fx-cursor: hand;" text="Delete" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                           <padding>
                              <Insets top="20.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <Label text="Students List">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnEnrollCourse" onAction="#btnEnrollCourseOnAction" prefHeight="26.0" prefWidth="115.0" style="-fx-background-color: #9c27b0; -fx-background-radius: 8; -fx-cursor: hand;" text="Enroll in Course" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="11.0" />
                                 </font>
                              </Button>
                              <Button fx:id="btnViewStudents" onAction="#btnViewStudentsOnAction" prefHeight="32.0" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-cursor: hand;" text="Refresh" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="11.0" />
                                 </font>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="15.0" />
                           </padding>
                        </HBox>
                        <TableView fx:id="tblStudent" prefHeight="250.0" style="&#10;                           ">
                           <columns>
                              <TableColumn fx:id="colId" prefWidth="80.0" text="Student ID" />
                              <TableColumn fx:id="colName" prefWidth="140.0" text="Full Name" />
                              <TableColumn fx:id="colNIC" prefWidth="100.0" text="NIC" />
                              <TableColumn fx:id="colEmail" prefWidth="160.0" text="Email Address" />
                              <TableColumn fx:id="colPhoneNumber" prefWidth="110.0" text="Phone" />
                              <TableColumn fx:id="colEnrollmentDate" prefWidth="100.0" text="Enrolled" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
