<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-border-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolmanagement.controller.MainDashboardController">
   <children>
      <BorderPane prefHeight="700.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox prefHeight="700.0" prefWidth="220.0" spacing="10" style="-fx-background-color: #2c3e50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 3, 0);">
               <children>
                  <VBox spacing="5" style="-fx-background-color: #34495e; -fx-padding: 20;">
                     <children>
                        <Label text="Elite Driving" textFill="#ecf0f1">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Management System" textFill="#bdc3c7">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox spacing="8">
                     <children>
                        <Button fx:id="btnDashboard" onAction="#loadDashboard" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Dashboard" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnStudents" onAction="#loadStudents" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Students" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnCourses" onAction="#loadCourses" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Courses" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnInstructors" onAction="#loadInstructors" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Instructors" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnLessons" onAction="#loadLessons" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Lessons" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnPayments" onAction="#loadPayments" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Payments" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                        <Button fx:id="btnUsers" onAction="#loadUsers" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-cursor: hand; -fx-alignment: CENTER_LEFT;" text="Users" textFill="WHITE">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <Region VBox.vgrow="ALWAYS" />
                  <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                     <children>
                        <Label fx:id="lblCurrentUser" text="Admin User" textFill="#ecf0f1">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblUserRole" text="System Administrator" textFill="#95a5a6">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnLogout" onAction="#logout" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 8; -fx-cursor: hand;" text="Logout" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </left>
         <center>
            <AnchorPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
