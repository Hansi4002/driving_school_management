<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.drivingschoolmanagement.controller.PaymentFormController">
   <children>
      <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0">
               <children>
                  <TextField fx:id="txtSearch" onAction="#txtSearchOnAction" prefWidth="400.0" promptText="Search payments..." style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <VBox style="-fx-background-color: #ecf0f1; -fx-padding: 20;                          -fx-background-radius: 10;                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0">
                     <children>
                        <Label text="Manage Payment">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnNewPayment" onAction="#btnNewPaymentOnAction" prefHeight="32.0" prefWidth="120.0" style="-fx-background-radius: 5; -fx-background-color: #2196F3; -fx-cursor: hand;" text="+ New Payment" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Payment ID">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtPaymentId" promptText="Enter Payment ID" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Amount (Rs)">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtAmount" promptText="Enter Amount" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Date">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <DatePicker fx:id="dpPaymentDate" style="-fx-background-radius: 5; -fx-pref-height: 35;" />
                           </children>
                        </VBox>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Status">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbStatus" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox spacing="15">
                     <children>
                        <VBox prefWidth="200.0" spacing="5">
                           <children>
                              <Label text="Student">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbStudent" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 5;" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Button fx:id="btnPayment" onAction="#btnPaymentOnAction" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #4CAF50; -fx-background-radius: 5; -fx-cursor: hand;" text="Payment" textFill="WHITE" />
                        <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #FF9800; -fx-background-radius: 5; -fx-cursor: hand;" text="Update" textFill="WHITE" />
                        <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 5; -fx-cursor: hand;" text="Delete" textFill="WHITE" />
                        <Button fx:id="btnEmail" layoutX="221.0" layoutY="30.0" onAction="#btnEmailOnAction" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #000080; -fx-background-radius: 5; -fx-cursor: hand;" text="Email" textFill="WHITE" />
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label text="Payments">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnViewPayments" onAction="#btnViewPaymentsOnAction" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #3498db; -fx-background-radius: 5; -fx-cursor: hand;" text="View All" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="11.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="tblPayment" prefHeight="200.0" style="-fx-border-radius: 5;">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" text="Payment ID" />
                        <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
                        <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="colStudent" prefWidth="150.0" text="Student" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
